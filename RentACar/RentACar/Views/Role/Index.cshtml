@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Add Role";
}

<table style="background-color:#ffff; border:dashed 3px #6D7B8D; padding:5px; width:99%; table-layout:fixed;" cellspacing="6" cellpadding="6">
    <tr style="height: 30px; background-color:#336699; color:#FFFFFF; border: 1px solid #659EC7;">
        <td align="center" colspan="2">
            <h2>Create User Roles</h2>
        </td>
    </tr>
    <tr>
        <td>
            <table id="tbrole" style="width:100%; border: 1px solid; background-color:gainsboro; padding-left: 10px">
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:100%; border:1px dotted;">@item.Name</td>
                    </tr>
                }
            </table>
        </td>
        <td align="right" style="color:#FFFFFF; padding-right:10px">
            <h3>@Html.ActionLink("Click to Create New Role", "Create", "Role")</h3>
        </td>
    </tr>
</table>